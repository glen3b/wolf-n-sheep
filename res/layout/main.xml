<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >
	<Button android:id="@+id/roll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/roll" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:visibility="visible"
        android:text="@string/message"
        android:textStyle="bold"
        android:gravity="center"
         />
        <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#2C33EC"
        />
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    >

    <TableRow android:id="@+id/table_columns_host">
         <TextView
            android:text="@string/player"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            />
          
        <TextView
            android:text="@string/wool_sheared"
            android:textStyle="bold"
            android:layout_gravity="right"
            />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#2C33EC"
        />

    <TableRow>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p1_label"
        android:text="@string/player_one"
        android:visibility="visible"
        android:textStyle="bold"
         />
        
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p1_wool"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:visibility="visible"
         />
    </TableRow>

    <TableRow>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p2_label"
        android:text="@string/player_two"
        android:visibility="visible"
         />
        
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p2_wool"
        android:layout_gravity="right"
        android:visibility="visible"
         />
    </TableRow>

    <TableRow>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p3_label"
        android:text="@string/player_three"
        android:visibility="visible"
         />
        
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p3_wool"
        android:layout_gravity="right"
        android:visibility="visible"
         />
    </TableRow>
    
    <TableRow>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p4_label"
        android:text="@string/player_four"
        android:visibility="visible"
         />
        
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p4_wool"
        android:layout_gravity="right"
        android:visibility="visible"
         />
    </TableRow>
</TableLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        />
    	<Button android:id="@+id/grow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:text="@string/grow" />
    <Button android:id="@+id/shear"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:text="@string/shear" />
    <Button android:id="@+id/wolf"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:text="@string/wolf" />
        <Button android:id="@+id/swap"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:text="@string/swap" />
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/winner"
        android:visibility="gone"
        android:text="@string/winner_unknown"
        android:textColor="#01FF27"
        android:textSize="17dp"
        android:textStyle="bold"
        android:gravity="center"
         />
        <Button android:id="@+id/share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/share" />
        <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/computer_action_log"
            />
</LinearLayout>